<Window x:Class="Coursework.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="500" Width="350"
        Background="White" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="280">
            <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,10,0,20"/>

            <TextBlock Text="Фамилия:"/>
            <TextBox Name="LastNameTextBox"/>

            <TextBlock Text="Имя:"/>
            <TextBox Name="FirstNameTextBox"/>

            <TextBlock Text="Логин:"/>
            <TextBox Name="UsernameTextBox"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox Name="PasswordBox"/>

            <TextBlock Text="Повторите пароль:"/>
            <PasswordBox Name="RepeatPasswordBox"/>

            <Button Name="SignUpButton" Content="Зарегистрироваться" Height="35" 
                    Style="{StaticResource CustomButtonStyle}" Margin="0,15,0,10" 
                    Click="SignUpButton_Click"/>

            <TextBlock Text="Уже есть аккаунт?" Foreground="Blue" TextDecorations="Underline"
                       HorizontalAlignment="Center" Cursor="Hand"
                       MouseLeftButtonDown="GoToLogin"/>
        </StackPanel>
    </Grid>
</Window>