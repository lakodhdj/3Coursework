<Page x:Class="Coursework.Pages.ShipmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Shipments">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Filter Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SearchShipmentTextBox" Width="200" Margin="0 0 10 0" 
                     ToolTip="Поиск по ID, поставщику или стоимости" 
                     TextChanged="SearchShipmentTextBox_TextChanged"/>
            <ComboBox x:Name="SortShipmentComboBox" Width="200" Margin="0 0 10 0"
                      ToolTip="Сортировка поставок"
                      SelectionChanged="SortShipmentComboBox_SelectionChanged"/>
            <Button x:Name="CleanFilterButton" Content="Сбросить фильтры" 
                    Click="CleanFilterButton_Click" Margin="0 0 10 0" 
                    Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SupplierIDTextBox" Width="100" Margin="0 5 10 0" ToolTip="Введите ID поставщика"/>
            <TextBox x:Name="EmployeeIDTextBox" Width="100" Margin="0 5 10 0" ToolTip="Введите ID сотрудника"/>
            <TextBox x:Name="TotalCostTextBox" Width="150" Margin="0 5 10 0" ToolTip="Введите общую стоимость"/>
            <Button Content="Добавить" Click="AddShipment_Click" Margin="0 5 10 0" 
                    Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>

        <!-- Shipments DataGrid -->
        <DataGrid x:Name="ShipmentsDataGrid" Grid.Row="2" AutoGenerateColumns="False" 
                 SelectionMode="Single" Margin="0 10 0 10" 
                 SelectionChanged="ShipmentsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ShipmentID}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Supplier ID" Binding="{Binding SupplierID}" Width="100"/>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeID}" Width="100"/>
                <DataGridTextColumn Header="Общая стоимость" Binding="{Binding TotalCost}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5 0">
            <Button Content="Сохранить изменения" Click="SaveShipmentChanges_Click" Margin="5 0" 
                    Style="{StaticResource CustomButtonStyle}"/>
            <Button Content="Удалить" Click="DeleteShipment_Click" Margin="5 0" 
                    Style="{StaticResource CustomButtonStyle}"/>
            <Button Content="Назад" Click="BackToMenu_Click" Margin="5 0" 
                    Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>