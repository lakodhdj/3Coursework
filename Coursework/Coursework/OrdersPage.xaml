<Page x:Class="Coursework.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Orders">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Filter Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SearchOrderTextBox" Width="200" Margin="0 0 10 0" 
                     ToolTip="Search by Order ID, Customer ID or Amount" 
                     TextChanged="SearchOrderTextBox_TextChanged"/>
            <ComboBox x:Name="SortOrderComboBox" Width="200" Margin="0 0 10 0" 
                      ToolTip="Sort Orders" 
                      SelectionChanged="SortOrderComboBox_SelectionChanged"/>
            <Button x:Name="CleanFilterButton" Content="Сбросить фильтр" 
                    Click="CleanFilterButton_Click" Margin="0 0 10 0"/>
        </StackPanel>

        <!-- Add Order Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="CustomerIDTextBox" Width="100" Margin="0 5 10 0"/>
            <TextBox x:Name="EmployeeIDTextBox" Width="100" Margin="0 5 10 0"/>
            <TextBox x:Name="TotalAmountTextBox" Width="100" Margin="0 5 10 0"/>
            <Button Content="Добавить" Click="AddOrder_Click" Margin="0 5 10 0"/>
        </StackPanel>

        <!-- Orders Table -->
        <DataGrid x:Name="OrdersDataGrid" Grid.Row="2" AutoGenerateColumns="False"
                  SelectionMode="Single" Margin="0 10 0 10" 
                  SelectionChanged="OrdersDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Binding="{Binding OrderID}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerID}" Width="100"/>
                <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeID}" Width="100"/>
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5 0">
            <Button Content="Сохранить изменения" Click="SaveOrderChanges_Click" Margin="5"/>
            <Button Content="Удалить" Click="DeleteOrder_Click" Margin="5"/>
            <Button Content="Назад" Click="BackToMenu_Click" Margin="5"/>

            <!-- Export to Excel Button -->
            <Button Content="Экспорт в Excel" Click="ExportToExcel_Click" Margin="5"/>

            <!-- Export to Word Button -->
            <Button Content="Экспорт в Word" Click="ExportToWord_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
