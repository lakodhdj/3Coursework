<Page x:Class="Coursework.Pages.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Customers">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SearchCustomerTextBox" Width="200" Margin="0 0 10 0" 
                     ToolTip="Search by name, email or phone" 
                     TextChanged="SearchCustomerTextBox_TextChanged"/>
            <ComboBox x:Name="SortCustomerComboBox" Width="200" Margin="0 0 10 0"
                      ToolTip="Sort customers"
                      SelectionChanged="SortCustomerComboBox_SelectionChanged"/>
            <Button x:Name="CleanFilterButton" Content="Очистить фильтр" 
                    Click="CleanFilterButton_Click" Margin="0 0 10 0"/>
        </StackPanel>

   
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="FirstNameTextBox" Width="120" Margin="0 5 10 0" ToolTip="Enter First Name"/>
            <TextBox x:Name="LastNameTextBox" Width="120" Margin="0 5 10 0" ToolTip="Enter Last Name"/>
            <TextBox x:Name="EmailTextBox" Width="150" Margin="0 5 10 0" ToolTip="Enter Email"/>
            <TextBox x:Name="PhoneTextBox" Width="120" Margin="0 5 10 0" ToolTip="Enter Phone Number"/>
            <Button Content="Добавить" Click="AddCustomer_Click" Margin="0 5 10 0"/>
        </StackPanel>

        <!-- Customers DataGrid -->
        <DataGrid x:Name="CustomersDataGrid" Grid.Row="2" AutoGenerateColumns="False" 
                 SelectionMode="Single" Margin="0 10 0 10" 
                 SelectionChanged="CustomersDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Почта" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding Phone}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

     
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5 0">
            <Button Content="Сохранить изменения" Click="SaveCustomerChanges_Click" Margin="5 0"/>
            <Button Content="Удалить" Click="DeleteCustomer_Click" Margin="5 0"/>
            <Button Content="Назад" Click="BackToMenu_Click" Margin="5 0"/>
        </StackPanel>
    </Grid>
</Page>