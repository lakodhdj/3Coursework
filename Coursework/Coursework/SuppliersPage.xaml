<Page x:Class="Coursework.Pages.SuppliersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Suppliers">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Filter Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SearchSupplierTextBox" Width="200" Margin="0 0 10 0"
                     ToolTip="Поиск по названию" TextChanged="SearchSupplierTextBox_TextChanged"/>
            <TextBox x:Name="SearchContactTextBox" Width="200" Margin="0 0 10 0"
                     ToolTip="Поиск по контакту" TextChanged="SearchContactTextBox_TextChanged"/>
            <ComboBox x:Name="SortComboBox" Width="200" Margin="0 0 10 0"
                      ToolTip="Сортировка" SelectionChanged="SortComboBox_SelectionChanged"/>
            <Button x:Name="ClearFiltersButton" Content="Сбросить фильтры"
                    Click="ClearFiltersButton_Click"/>
        </StackPanel>

        <!-- Input Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SupplierNameTextBox" Width="150" Margin="0 0 10 0" ToolTip="Название"/>
            <TextBox x:Name="ContactNameTextBox" Width="150" Margin="0 0 10 0" ToolTip="Контакт"/>
            <TextBox x:Name="PhoneTextBox" Width="100" Margin="0 0 10 0" ToolTip="Телефон"/>
            <TextBox x:Name="AddressTextBox" Width="200" Margin="0 0 10 0" ToolTip="Адрес"/>
            <Button x:Name="AddButton" Content="Добавить" Click="AddSupplier_Click" Margin="0 0 10 0"/>
        </StackPanel>

        <!-- Suppliers DataGrid -->
        <DataGrid x:Name="SuppliersDataGrid" Grid.Row="2" AutoGenerateColumns="False"
                  SelectionMode="Single" Margin="0 10 0 10" 
                  SelectionChanged="SuppliersDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding SupplierName}" Width="150"/>
                <DataGridTextColumn Header="Контакт" Binding="{Binding ContactName}" Width="150"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="100"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5 0">
            <Button x:Name="SaveButton" Content="Сохранить изменения" Click="SaveSupplierChanges_Click" Margin="5 0"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteSupplier_Click" Margin="5 0"/>
            <Button Content="Назад" Click="BackToMenu_Click" Margin="5 0"/>
        </StackPanel>
    </Grid>
</Page>
